num = int(input())

for i in range(1, num + 1):
    
    if i == 1:
        print((num - i) * " " + i * "*")
        
    elif i > 1:
        print((num - i) * " " + i * "* ")
        
for i in range(num - 1, 0, - 1):
    
    if i == 1:
        print((num - i) * " " + i * "*")
        
    elif i > 1:
        print((num - i) * " " + i * "* ")
            
